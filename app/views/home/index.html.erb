<h1 style="text-align: center">Trouve ton biclou</h1>


<div id="mapid">
</div>

<div class="center">
<%= form_with(url: "/", method: "get") do %> <!-- by default remote:true -->
  <%= label_tag(:place, "Search for:") %>
  <%= text_field_tag(:place) %>
  <%= submit_tag("Search") %>
<% end %>
</div>

<%=render 'list'%>

<!--Script from leaflet--> 
<script>
var map = L.map('mapid').setView([48.8564263, 2.35252757801161], 13);
  L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', {
        attribution: '&copy; <a href="https://www.openstreetmap.org/copyright">OpenStreetMap</a> contributors'
    }).addTo(map);
</script>